@model List<OnlineShop.Models.CartItem>

@{
    ViewData["Title"] = "Кошик";
}

<h2>Ваш кошик</h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Товар</th>
                <th>Ціна</th>
                <th>Кількість</th>
                <th>Сума</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("c")</td>
                    <td>@item.Quantity</td>
                    <td>
                        @((item.Quantity * item.Product.Price).ToString("c"))
                    </td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.Product.Id" class="btn btn-danger btn-sm">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right"><b>Всього:</b></td>
                <td>
                    <b>@Model.Sum(x => x.Quantity * x.Product.Price).ToString("c")</b>
                </td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Продовжити покупки</a>
        <a href="#" class="btn btn-success">Оформити замовлення</a>
    </div>
}
else
{
    <div class="alert alert-info">
        Ваш кошик порожній. <a asp-controller="Home" asp-action="Index">Перейти до товарів</a>
    </div>
}