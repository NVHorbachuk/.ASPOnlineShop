@model OnlineShop.Models.Order

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card border-0 shadow-lg" style="background-color: rgba(255, 255, 255, 0.95); border-radius: 20px;">
                
                <div class="card-header bg-transparent border-0 text-center pt-4 pb-2">
                    <h2 class="font-weight-bold text-dark text-uppercase" style="letter-spacing: 1px;">Оформлення</h2>
                    <p class="text-muted small">Ваші дані в безпеці. Заповніть форму для доставки.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Checkout" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" placeholder="Ім'я" style="border-radius: 10px;" />
                                    <label asp-for="FirstName">Ім'я</label>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Прізвище" style="border-radius: 10px;" />
                                    <label asp-for="LastName">Прізвище</label>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+380..." style="border-radius: 10px;" />
                            <label asp-for="PhoneNumber">Номер телефону</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Address" class="form-control" placeholder="Адреса доставки" style="height: 100px; border-radius: 10px;"></textarea>
                            <label asp-for="Address">Адреса доставки (місто, відділення НП)</label>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg py-3 shadow-sm" style="border-radius: 10px; font-weight: 600; text-transform: uppercase;">
                                Підтвердити замовлення ✅
                            </button>
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-link text-muted text-decoration-none">
                                ← Повернутися в кошик
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}